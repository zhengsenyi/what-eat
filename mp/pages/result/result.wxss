/* pages/result/result.wxss */
.container-result {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #ecfccb 50%, #fefce8 100%);
}

/* 主卡片 */
.main-card {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  background: transparent;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
}

.back-btn:active {
  background: rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 36rpx;
  color: #374151;
}

.page-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
}

/* 右侧区域 */
.nav-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.share-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  margin-right: 16rpx;
}

.share-btn:active {
  background: rgba(0, 0, 0, 0.1);
}

.share-icon {
  font-size: 32rpx;
}

.nav-right-placeholder {
  flex-shrink: 0;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  padding: 0 32rpx;
  box-sizing: border-box;
}

/* 结果头部 */
.result-header {
  text-align: center;
  padding: 24rpx 0 32rpx;
}

.success-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #ecfccb, #d9f99d);
  padding: 10rpx 24rpx;
  border-radius: 9999px;
  margin-bottom: 16rpx;
}

.badge-icon {
  font-size: 24rpx;
}

.badge-text {
  font-size: 24rpx;
  color: #3f6212;
  font-weight: 600;
}

.result-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #1f2937;
  display: block;
}

/* 主结果卡片 */
.result-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

/* 图片区域 */
.card-image-wrapper {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.4));
  display: flex;
  align-items: flex-end;
  padding: 16rpx;
}

.rating-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.95);
  padding: 8rpx 16rpx;
  border-radius: 9999px;
}

.rating-star {
  font-size: 22rpx;
}

.rating-value {
  font-size: 26rpx;
  font-weight: 700;
  color: #92400e;
}

.favorite-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.favorite-btn:active {
  transform: scale(0.9);
}

.favorite-btn.active {
  background: #fef2f2;
}

.favorite-icon {
  font-size: 32rpx;
}

/* 信息区域 */
.card-content {
  padding: 28rpx;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.dish-info {
  flex: 1;
  min-width: 0;
}

.dish-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 6rpx;
}

.restaurant-name {
  font-size: 26rpx;
  color: #6b7280;
  display: block;
}

.price-tag {
  display: flex;
  align-items: baseline;
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.price-currency {
  font-size: 22rpx;
  color: #92400e;
  font-weight: 600;
}

.price-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #92400e;
}

.price-unit {
  font-size: 20rpx;
  color: #b45309;
  margin-left: 4rpx;
}

/* 标签 */
.tags-wrapper {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag {
  padding: 8rpx 20rpx;
  border-radius: 9999px;
  font-size: 22rpx;
  font-weight: 500;
}

.tag-primary {
  background: #ecfccb;
  color: #3f6212;
}

.tag-secondary {
  background: #fef3c7;
  color: #92400e;
}

/* 描述 */
.description-box {
  margin-bottom: 20rpx;
}

.description-text {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.6;
}

/* 用户评价 */
.review-card {
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 20rpx;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 10rpx;
}

.review-icon {
  font-size: 24rpx;
}

.review-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #374151;
}

.review-text {
  font-size: 26rpx;
  color: #6b7280;
  font-style: italic;
  line-height: 1.5;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 32rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.action-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon-wrapper:active {
  transform: scale(0.9);
}

.action-icon-wrapper.refresh {
  background: linear-gradient(135deg, #dbeafe, #bfdbfe);
}

.action-icon-wrapper.favorite {
  background: linear-gradient(135deg, #fce7f3, #fbcfe8);
}

.action-icon-wrapper.favorite.active {
  background: linear-gradient(135deg, #fecdd3, #fda4af);
}

.action-icon-wrapper.navigation {
  background: linear-gradient(135deg, #ecfccb, #d9f99d);
}

.action-icon-wrapper.share {
  background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
}

.action-icon {
  font-size: 40rpx;
}

.action-label {
  font-size: 22rpx;
  color: #374151;
  font-weight: 500;
}

/* 相似推荐 */
.similar-section {
  margin-bottom: 24rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
}

.similar-scroll {
  width: 100%;
  white-space: nowrap;
}

.similar-list {
  display: inline-flex;
  gap: 16rpx;
  padding-right: 32rpx;
}

.similar-card {
  width: 240rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.similar-card:active {
  transform: scale(0.96);
}

.similar-image-wrapper {
  position: relative;
  width: 100%;
  height: 160rpx;
}

.similar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.similar-rating {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  background: rgba(255, 255, 255, 0.95);
  padding: 4rpx 10rpx;
  border-radius: 9999px;
}

.rating-star-sm {
  font-size: 18rpx;
}

.rating-value-sm {
  font-size: 20rpx;
  font-weight: 600;
  color: #92400e;
}

.similar-info {
  padding: 16rpx;
}

.similar-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.similar-price {
  font-size: 26rpx;
  font-weight: 700;
  color: #84cc16;
}

/* 底部占位 */
.bottom-placeholder {
  height: 160rpx;
}

/* 底部固定按钮 */
.bottom-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(transparent, rgba(240, 253, 244, 0.95) 30%);
  z-index: 100;
}

.btn-confirm {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #a3e635 0%, #84cc16 50%, #65a30d 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 10rpx 28rpx rgba(132, 204, 22, 0.4);
  border: none;
}

.btn-confirm::after {
  border: none;
}

.btn-confirm:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 16rpx rgba(132, 204, 22, 0.3);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 700;
  color: white;
  letter-spacing: 2rpx;
}
