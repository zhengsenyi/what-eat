/* pages/history/history.wxss */
.container-history {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #ecfccb 50%, #fefce8 100%);
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  background: transparent;
  padding: 0 24rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
}

.back-btn:active {
  background: rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 48rpx;
  color: #374151;
  font-weight: 300;
  margin-top: -4rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.nav-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.nav-right-placeholder {
  flex-shrink: 0;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #e5e7eb;
  border-top-color: #84cc16;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
}

.empty-btn {
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  border-radius: 9999px;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  width: 100%;
}

.record-card {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

/* 食物图片 */
.food-image-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.food-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.meal-type-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
}

.meal-type-badge text {
  font-size: 20rpx;
  color: white;
  font-weight: 600;
}

/* 食物信息 */
.food-info {
  flex: 1;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.food-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.food-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.food-price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 22rpx;
  color: #ef4444;
  font-weight: 600;
}

.price-value {
  font-size: 32rpx;
  color: #ef4444;
  font-weight: 700;
}

.food-category {
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.food-category text {
  font-size: 20rpx;
  color: #6b7280;
}

.food-description {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.record-time {
  display: flex;
  align-items: center;
  gap: 6rpx;
  margin-top: 8rpx;
}

.time-icon {
  font-size: 22rpx;
}

.time-text {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 底部安全区域 */
.safe-bottom {
  height: 40rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}