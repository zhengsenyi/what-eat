/* pages/agreement/agreement.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #ecfccb 50%, #fefce8 100%);
  display: flex;
  flex-direction: column;
  padding: 0 !important;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  background: transparent;
  padding: 0 24rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.nav-left {
  display: flex;
  align-items: center;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
}

.back-btn:active {
  background: rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 48rpx;
  color: #374151;
  font-weight: 300;
  margin-top: -4rpx;
}

.nav-center {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1f2937;
}

.nav-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.nav-placeholder {
  flex-shrink: 0;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
}

.content {
  padding: 24rpx 32rpx;
}

.section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-content {
  display: block;
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.8;
  white-space: pre-wrap;
}

.footer {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 8rpx;
}