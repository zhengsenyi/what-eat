/* pages/profile/profile.wxss */
.container-profile {
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 500rpx;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.bg-wave {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #a3e635 0%, #84cc16 50%, #65a30d 100%);
  border-radius: 0 0 100% 100% / 0 0 50% 50%;
  opacity: 0.15;
}

/* 主卡片 */
.main-card {
  width: 100%;
  min-height: calc(100vh - 48rpx);
  background: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

/* 淡入动画 */
.fade-in {
  animation: fadeInUp 0.5s ease-out forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 顶部导航 */
.header {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  border-bottom: 2rpx solid #f3f4f6;
  background: white;
}

.header-left {
  display: flex;
  align-items: center;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}

.header-right {
  display: flex;
  align-items: center;
}

.settings-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.settings-btn:active {
  background: #f3f4f6;
  transform: scale(0.95);
}

.settings-icon {
  font-size: 44rpx;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: linear-gradient(135deg, #ecfccb 0%, #d9f99d 100%);
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(132, 204, 22, 0.15);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar-wrapper {
  position: relative;
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(132, 204, 22, 0.3);
}

.avatar-icon {
  font-size: 56rpx;
}

.avatar-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid white;
}

.badge-icon {
  font-size: 20rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.level-badge {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 16rpx;
  border-radius: 9999px;
}

.level-icon {
  font-size: 20rpx;
}

.level-text {
  font-size: 22rpx;
  color: #92400e;
  font-weight: 600;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 9999px;
  transition: all 0.3s ease;
}

.edit-btn:active {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.95);
}

.edit-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

.edit-arrow {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.stats-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.stats-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
}

.stats-date {
  font-size: 24rpx;
  color: #9ca3af;
}

.stats-grid {
  display: flex;
  align-items: center;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 0;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-value {
  font-size: 52rpx;
  font-weight: 800;
  color: #1f2937;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

.stat-trend {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 12rpx;
  border-radius: 9999px;
  font-size: 20rpx;
}

.stat-trend.up {
  background: #ecfccb;
  color: #3f6212;
}

.trend-icon {
  font-size: 18rpx;
}

.trend-value {
  font-weight: 600;
}

.stat-badge {
  padding: 4rpx 12rpx;
  background: #fef3c7;
  border-radius: 9999px;
}

.stat-badge .badge-text {
  font-size: 20rpx;
  color: #92400e;
  font-weight: 500;
}

.stat-divider {
  width: 2rpx;
  height: 80rpx;
  background: #e5e7eb;
}

/* 菜单区块 */
.menu-section {
  margin-bottom: 32rpx;
}

.menu-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #6b7280;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
  display: block;
}

.menu-card {
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  transition: all 0.3s ease;
}

.menu-item:not(:last-child) {
  border-bottom: 2rpx solid #f3f4f6;
}

.menu-item:active {
  background: #f9fafb;
}

.menu-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.menu-icon-wrapper.favorites {
  background: linear-gradient(135deg, #fce7f3, #fbcfe8);
}

.menu-icon-wrapper.history {
  background: linear-gradient(135deg, #dbeafe, #bfdbfe);
}

.menu-icon-wrapper.preferences {
  background: linear-gradient(135deg, #ecfccb, #d9f99d);
}

.menu-icon-wrapper.feedback {
  background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
}

.menu-icon-wrapper.about {
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
}

.menu-icon-wrapper.cache {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
}

.menu-icon {
  font-size: 40rpx;
}

.menu-content {
  flex: 1;
  min-width: 0;
}

.menu-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 4rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

.menu-arrow {
  font-size: 36rpx;
  color: #d1d5db;
}

/* 退出登录 */
.logout-section {
  padding: 16rpx 0 32rpx;
}

.btn-logout {
  width: 100%;
  height: 100rpx;
  background: white;
  border: 2rpx solid #fecaca;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.btn-logout::after {
  border: none;
}

.btn-logout:active {
  background: #fef2f2;
  transform: scale(0.98);
}

.logout-icon {
  font-size: 32rpx;
}

.logout-text {
  font-size: 30rpx;
  color: #ef4444;
  font-weight: 600;
}

/* 底部版权 */
.footer {
  text-align: center;
  padding: 40rpx 0 24rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 8rpx;
}

.footer-slogan {
  font-size: 22rpx;
  color: #d1d5db;
}

/* 底部安全区域 */
.safe-bottom {
  height: 40rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
