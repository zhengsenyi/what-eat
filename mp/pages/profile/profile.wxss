/* pages/profile/profile.wxss */
.container-profile {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #ecfccb 50%, #fefce8 100%);
}

/* 主卡片 */
.main-card {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  background: transparent;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-left {
  display: flex;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

/* 右侧区域 */
.nav-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.nav-right-placeholder {
  flex-shrink: 0;
}

/* 内容区域 */
.content-scroll {
  flex: 1;
  padding: 16rpx 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #ecfccb 0%, #d9f99d 100%);
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(132, 204, 22, 0.15);
  flex-shrink: 0;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar-wrapper {
  position: relative;
}

.avatar-container {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(132, 204, 22, 0.3);
}

.avatar-icon {
  font-size: 40rpx;
}

/* 微信头像图片 */
.avatar-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(132, 204, 22, 0.3);
  border: 3rpx solid #d9f99d;
}

.avatar-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid white;
}

.badge-icon {
  font-size: 18rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.user-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
}

.level-badge {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 14rpx;
  border-radius: 9999px;
}

.level-icon {
  font-size: 18rpx;
}

.level-text {
  font-size: 20rpx;
  color: #92400e;
  font-weight: 600;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 14rpx 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 9999px;
}

.edit-btn:active {
  background: rgba(255, 255, 255, 1);
}

.edit-text {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
}

.edit-arrow {
  font-size: 26rpx;
  color: #9ca3af;
}

/* 剩余次数卡片 */
.remaining-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(251, 191, 36, 0.2);
  flex-shrink: 0;
}

.remaining-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.remaining-icon {
  font-size: 40rpx;
}

.remaining-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.remaining-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #92400e;
}

.remaining-hint {
  font-size: 22rpx;
  color: #b45309;
}

.remaining-count {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.count-number {
  font-size: 56rpx;
  font-weight: 800;
  color: #92400e;
}

.count-unit {
  font-size: 24rpx;
  font-weight: 600;
  color: #b45309;
}

/* 菜单区块 */
.menu-section {
  margin-bottom: 12rpx;
  flex-shrink: 0;
}

.menu-section-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #6b7280;
  margin-bottom: 8rpx;
  padding-left: 8rpx;
  display: block;
}

.menu-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
}

.menu-item:not(:last-child) {
  border-bottom: 2rpx solid #f3f4f6;
}

.menu-item:active {
  background: #f9fafb;
}

.menu-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.menu-icon-wrapper.history {
  background: linear-gradient(135deg, #dbeafe, #bfdbfe);
}

.menu-icon-wrapper.feedback {
  background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
}

.menu-icon-wrapper.about {
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
}

.menu-icon-wrapper.cache {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
}

.menu-icon {
  font-size: 28rpx;
}

.menu-content {
  flex: 1;
  min-width: 0;
}

.menu-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 4rpx;
}

.menu-desc {
  font-size: 22rpx;
  color: #9ca3af;
}

.menu-arrow {
  font-size: 32rpx;
  color: #d1d5db;
}

/* 退出登录 */
.logout-section {
  padding: 12rpx 0 16rpx;
  flex-shrink: 0;
}

.btn-logout {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #fecaca;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn-logout::after {
  border: none;
}

.btn-logout:active {
  background: #fef2f2;
}

.logout-icon {
  font-size: 28rpx;
}

.logout-text {
  font-size: 28rpx;
  color: #ef4444;
  font-weight: 600;
}

/* 底部版权 */
.footer {
  text-align: center;
  padding: 16rpx 0 8rpx;
  margin-top: auto;
  flex-shrink: 0;
}

.footer-text {
  font-size: 20rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 4rpx;
}

.footer-slogan {
  font-size: 18rpx;
  color: #d1d5db;
}

/* 底部安全区域 */
.safe-bottom {
  height: 20rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  flex-shrink: 0;
}

/* 编辑用户信息弹窗 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 600rpx;
  background: white;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: modalFadeIn 0.3s ease-out;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
}

.modal-body {
  margin-bottom: 40rpx;
}

/* 头像选择区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar-btn {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  border-radius: 50%;
  overflow: visible;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #e5e7eb;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.avatar-edit-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(132, 204, 22, 0.4);
}

.edit-icon-text {
  font-size: 24rpx;
}

.avatar-hint {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}

/* 昵称输入区域 */
.nickname-section {
  width: 100%;
}

.nickname-input-wrapper {
  display: flex;
  align-items: center;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  padding: 0 24rpx;
  transition: all 0.3s ease;
}

.nickname-input-wrapper:focus-within {
  border-color: #84cc16;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(132, 204, 22, 0.1);
}

.nickname-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-right: 16rpx;
  white-space: nowrap;
}

.nickname-input {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  color: #1f2937;
}

.nickname-input::placeholder {
  color: #9ca3af;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  gap: 24rpx;
}

.btn-cancel {
  flex: 1;
  height: 80rpx;
  background: #f3f4f6;
  color: #6b7280;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel::after {
  border: none;
}

.btn-save {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(132, 204, 22, 0.35);
}

.btn-save::after {
  border: none;
}
