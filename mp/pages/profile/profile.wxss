/* pages/profile/profile.wxss */
.container-profile {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #ecfccb 50%, #fefce8 100%);
}

/* 主卡片 */
.main-card {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  background: transparent;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-left {
  display: flex;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

/* 右侧区域 */
.nav-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.nav-right-placeholder {
  flex-shrink: 0;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  background: linear-gradient(135deg, #ecfccb 0%, #d9f99d 100%);
  border-radius: 28rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(132, 204, 22, 0.15);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar-wrapper {
  position: relative;
}

.avatar-container {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(132, 204, 22, 0.3);
}

.avatar-icon {
  font-size: 48rpx;
}

.avatar-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid white;
}

.badge-icon {
  font-size: 18rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.user-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
}

.level-badge {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 14rpx;
  border-radius: 9999px;
}

.level-icon {
  font-size: 18rpx;
}

.level-text {
  font-size: 20rpx;
  color: #92400e;
  font-weight: 600;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 14rpx 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 9999px;
}

.edit-btn:active {
  background: rgba(255, 255, 255, 1);
}

.edit-text {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
}

.edit-arrow {
  font-size: 26rpx;
  color: #9ca3af;
}

/* 剩余次数卡片 */
.remaining-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 28rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(251, 191, 36, 0.2);
}

.remaining-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.remaining-icon {
  font-size: 48rpx;
}

.remaining-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.remaining-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #92400e;
}

.remaining-hint {
  font-size: 22rpx;
  color: #b45309;
}

.remaining-count {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.count-number {
  font-size: 56rpx;
  font-weight: 800;
  color: #92400e;
}

.count-unit {
  font-size: 24rpx;
  font-weight: 600;
  color: #b45309;
}

/* 菜单区块 */
.menu-section {
  margin-bottom: 28rpx;
}

.menu-section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #6b7280;
  margin-bottom: 14rpx;
  padding-left: 8rpx;
  display: block;
}

.menu-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
}

.menu-item:not(:last-child) {
  border-bottom: 2rpx solid #f3f4f6;
}

.menu-item:active {
  background: #f9fafb;
}

.menu-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.menu-icon-wrapper.history {
  background: linear-gradient(135deg, #dbeafe, #bfdbfe);
}

.menu-icon-wrapper.feedback {
  background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
}

.menu-icon-wrapper.about {
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
}

.menu-icon-wrapper.cache {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
}

.menu-icon {
  font-size: 36rpx;
}

.menu-content {
  flex: 1;
  min-width: 0;
}

.menu-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 4rpx;
}

.menu-desc {
  font-size: 22rpx;
  color: #9ca3af;
}

.menu-arrow {
  font-size: 32rpx;
  color: #d1d5db;
}

/* 退出登录 */
.logout-section {
  padding: 16rpx 0 24rpx;
}

.btn-logout {
  width: 100%;
  height: 92rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #fecaca;
  border-radius: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn-logout::after {
  border: none;
}

.btn-logout:active {
  background: #fef2f2;
}

.logout-icon {
  font-size: 28rpx;
}

.logout-text {
  font-size: 28rpx;
  color: #ef4444;
  font-weight: 600;
}

/* 底部版权 */
.footer {
  text-align: center;
  padding: 32rpx 0 20rpx;
}

.footer-text {
  font-size: 22rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 6rpx;
}

.footer-slogan {
  font-size: 20rpx;
  color: #d1d5db;
}

/* 底部安全区域 */
.safe-bottom {
  height: 40rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
