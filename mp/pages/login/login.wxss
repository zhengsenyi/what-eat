/* pages/login/login.wxss */
.container-login {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  background: linear-gradient(180deg, #f0fdf4 0%, #ecfdf5 50%, #f0fdf4 100%);
}

/* 滚动容器 */
.login-scroll {
  flex: 1;
  width: 100%;
  height: 100vh;
}

/* 背景装饰圆圈 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.25;
}

.bg-circle-1 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #a3e635, #84cc16);
  top: -80rpx;
  right: -80rpx;
  animation: float 6s ease-in-out infinite;
}

.bg-circle-2 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #fef08a, #facc15);
  bottom: 150rpx;
  left: -60rpx;
  animation: float 8s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(3deg); }
}

/* 登录卡片 */
.login-card {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

/* 内容区域 */
.content {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头部区域（Logo + 标题） */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.logo-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 32rpx rgba(132, 204, 22, 0.35);
  margin-bottom: 20rpx;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1f2937;
  letter-spacing: 4rpx;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #6b7280;
}

/* 微信登录按钮 */
.wechat-login {
  width: 100%;
  margin-bottom: 48rpx;
}

.btn-wechat {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: white;
  font-weight: 600;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.35);
  transition: all 0.3s ease;
}

.btn-wechat::after {
  border: none;
}

.btn-wechat-hover {
  transform: scale(0.97);
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.3);
}

.btn-wechat[disabled] {
  opacity: 0.6;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.btn-wechat-text {
  color: white;
  font-size: 30rpx;
  font-weight: 600;
}

/* 协议提示 */
.agreement {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.agreement-text {
  font-size: 20rpx;
  color: #9ca3af;
}

.agreement-link {
  font-size: 20rpx;
  color: #84cc16;
  margin: 0 4rpx;
}

/* 淡入动画 */
.fade-in {
  animation: fadeInUp 0.5s ease-out forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 用户信息授权弹窗 */
.userinfo-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 600rpx;
  background: white;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: modalFadeIn 0.3s ease-out;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
}

.modal-body {
  margin-bottom: 40rpx;
}

/* 头像选择区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar-btn {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  padding: 0;
  margin: 0;
  background: #f5f5f5;
  border: none;
  border-radius: 50%;
  overflow: visible;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.avatar-btn::after {
  border: none;
}

/* 确保按钮可点击 */
.avatar-btn:active {
  opacity: 0.8;
}

.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
  border-radius: 50%;
}

.avatar-placeholder-text {
  font-size: 80rpx;
}

.avatar-edit-icon {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(132, 204, 22, 0.4);
  z-index: 10;
}

.edit-icon-text {
  font-size: 24rpx;
}

.avatar-hint {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}

/* 昵称输入区域 */
.nickname-section {
  width: 100%;
}

.nickname-input-wrapper {
  display: flex;
  align-items: center;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  padding: 0 24rpx;
  transition: all 0.3s ease;
}

.nickname-input-wrapper:focus-within {
  border-color: #84cc16;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(132, 204, 22, 0.1);
}

.nickname-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-right: 16rpx;
  white-space: nowrap;
}

.nickname-input {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  color: #1f2937;
}

.nickname-input::placeholder {
  color: #9ca3af;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  gap: 24rpx;
}

.btn-skip {
  flex: 1;
  height: 80rpx;
  background: #f3f4f6;
  color: #6b7280;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-skip::after {
  border: none;
}

.btn-confirm {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(132, 204, 22, 0.35);
}

.btn-confirm::after {
  border: none;
}

/* 用户信息表单 */
.userinfo-form {
  width: 100%;
}

/* 授权提示 */
.auth-tips {
  margin-top: 24rpx;
  padding: 16rpx 20rpx;
  background: #f0fdf4;
  border-radius: 12rpx;
  text-align: center;
}

.tips-text {
  font-size: 22rpx;
  color: #65a30d;
}
