/* pages/login/login.wxss */
.container-login {
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景装饰圆圈 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.3;
}

.bg-circle-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #a3e635, #84cc16);
  top: -100rpx;
  right: -100rpx;
  animation: float 6s ease-in-out infinite;
}

.bg-circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #fef08a, #facc15);
  bottom: 200rpx;
  left: -100rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.bg-circle-3 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #86efac, #22c55e);
  bottom: -50rpx;
  right: 100rpx;
  animation: float 7s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-30rpx) rotate(5deg); }
}

/* 登录卡片 */
.login-card {
  width: 100%;
  max-width: 680rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 48rpx;
  box-shadow: 0 32rpx 80rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  position: relative;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

/* 卡片顶部装饰 */
.card-header {
  height: 160rpx;
  background: linear-gradient(135deg, #a3e635 0%, #84cc16 50%, #65a30d 100%);
  position: relative;
  overflow: hidden;
}

.header-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 50%, rgba(255,255,255,0.2) 0%, transparent 50%),
    radial-gradient(circle at 80% 50%, rgba(255,255,255,0.15) 0%, transparent 40%);
}

/* 内容区域 */
.content {
  padding: 0 48rpx 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Logo区域 */
.logo-section {
  margin-top: -80rpx;
  margin-bottom: 32rpx;
}

.logo-container {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-inner {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #84cc16 0%, #65a30d 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 40rpx rgba(132, 204, 22, 0.4);
  position: relative;
  z-index: 2;
}

.logo-ring {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border: 4rpx solid rgba(132, 204, 22, 0.3);
  border-radius: 50%;
  animation: pulse-ring 2s ease-out infinite;
}

@keyframes pulse-ring {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.3);
    opacity: 0;
  }
}

.logo-icon {
  width: 72rpx;
  height: 72rpx;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 800;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
}

.title-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.decoration-line {
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #84cc16, transparent);
  border-radius: 2rpx;
}

.decoration-icon {
  font-size: 32rpx;
  margin: 0 16rpx;
}

.subtitle {
  font-size: 30rpx;
  color: #4b5563;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle-secondary {
  font-size: 26rpx;
  color: #9ca3af;
  display: block;
}

/* 特性展示 */
.features {
  display: flex;
  justify-content: center;
  gap: 48rpx;
  margin-bottom: 56rpx;
  padding: 32rpx 0;
  width: 100%;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.feature-icon {
  font-size: 48rpx;
  display: block;
  animation: bounce-subtle 2s ease-in-out infinite;
}

.feature-item:nth-child(2) .feature-icon {
  animation-delay: 0.3s;
}

.feature-item:nth-child(3) .feature-icon {
  animation-delay: 0.6s;
}

@keyframes bounce-subtle {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.feature-text {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 登录按钮区域 */
.actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.btn-wechat {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #a3e635 0%, #84cc16 50%, #65a30d 100%);
  color: white;
  font-weight: 600;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(132, 204, 22, 0.4);
  transition: all 0.3s ease;
}

.btn-wechat::after {
  border: none;
}

.btn-wechat-hover {
  transform: scale(0.96);
  box-shadow: 0 8rpx 20rpx rgba(132, 204, 22, 0.3);
}

.btn-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
}

.btn-phone {
  width: 100%;
  height: 100rpx;
  background-color: white;
  color: #84cc16;
  font-weight: 600;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border: 4rpx solid #84cc16;
  transition: all 0.3s ease;
}

.btn-phone::after {
  border: none;
}

.btn-phone-hover {
  background-color: #ecfccb;
  transform: scale(0.96);
}

.btn-phone-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 协议提示 */
.agreement {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.agreement-text {
  font-size: 22rpx;
  color: #9ca3af;
}

.agreement-link {
  font-size: 22rpx;
  color: #84cc16;
  margin: 0 4rpx;
}

/* 淡入动画 */
.fade-in {
  animation: fadeInUp 0.6s ease-out forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
