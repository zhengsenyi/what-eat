/* pages/login/login.wxss */
.container-login {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  background: linear-gradient(180deg, #f0fdf4 0%, #ecfdf5 50%, #f0fdf4 100%);
}

/* 滚动容器 */
.login-scroll {
  flex: 1;
  width: 100%;
  height: 100vh;
}

/* 背景装饰圆圈 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.25;
}

.bg-circle-1 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #a3e635, #84cc16);
  top: -80rpx;
  right: -80rpx;
  animation: float 6s ease-in-out infinite;
}

.bg-circle-2 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #fef08a, #facc15);
  bottom: 150rpx;
  left: -60rpx;
  animation: float 8s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(3deg); }
}

/* 登录卡片 */
.login-card {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

/* 内容区域 */
.content {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头部区域（Logo + 标题） */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.logo-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 32rpx rgba(132, 204, 22, 0.35);
  margin-bottom: 20rpx;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1f2937;
  letter-spacing: 4rpx;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #6b7280;
}

/* 微信登录按钮 */
.wechat-login {
  width: 100%;
  margin-bottom: 24rpx;
}

.btn-wechat {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: white;
  font-weight: 600;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.35);
  transition: all 0.3s ease;
}

.btn-wechat::after {
  border: none;
}

.btn-wechat-hover {
  transform: scale(0.97);
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.3);
}

.btn-wechat[disabled] {
  opacity: 0.6;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.btn-wechat-text {
  color: white;
  font-size: 30rpx;
  font-weight: 600;
}

/* 分隔线 */
.divider {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin: 24rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #d1d5db;
}

.divider-text {
  font-size: 22rpx;
  color: #9ca3af;
  padding: 0 20rpx;
  white-space: nowrap;
}

/* 表单区域 */
.form-section {
  width: 100%;
  margin-bottom: 24rpx;
}

.input-group {
  display: flex;
  align-items: center;
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.input-group:focus-within {
  border-color: #84cc16;
  box-shadow: 0 0 0 4rpx rgba(132, 204, 22, 0.1);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.input-field {
  flex: 1;
  height: 84rpx;
  font-size: 28rpx;
  color: #1f2937;
}

.input-field::placeholder {
  color: #9ca3af;
  font-size: 26rpx;
}

/* 登录按钮区域 */
.actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #a3e635 0%, #84cc16 50%, #65a30d 100%);
  color: white;
  font-weight: 600;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(132, 204, 22, 0.35);
  transition: all 0.3s ease;
}

.btn-primary::after {
  border: none;
}

.btn-primary-hover {
  transform: scale(0.97);
  box-shadow: 0 6rpx 16rpx rgba(132, 204, 22, 0.3);
}

.btn-primary[disabled] {
  opacity: 0.6;
}

.btn-text {
  color: white;
  font-size: 30rpx;
  font-weight: 600;
}

.switch-mode {
  text-align: center;
  padding: 12rpx 0;
}

.switch-text {
  font-size: 26rpx;
  color: #84cc16;
  font-weight: 500;
}

/* 协议提示 */
.agreement {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.agreement-text {
  font-size: 20rpx;
  color: #9ca3af;
}

.agreement-link {
  font-size: 20rpx;
  color: #84cc16;
  margin: 0 4rpx;
}

/* 淡入动画 */
.fade-in {
  animation: fadeInUp 0.5s ease-out forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
