/* pages/index/index.wxss */
.container-index {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #ecfccb 50%, #fefce8 100%);
}

/* 主卡片 */
.main-card {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  background: transparent;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.app-logo {
  font-size: 40rpx;
}

.app-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
  letter-spacing: 2rpx;
}

.avatar-btn {
  padding: 8rpx;
}

.avatar-circle {
  width: 68rpx;
  height: 68rpx;
  background: linear-gradient(135deg, #ecfccb, #d9f99d);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(132, 204, 22, 0.2);
}

.avatar-icon {
  font-size: 32rpx;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  padding: 0 32rpx;
  box-sizing: border-box;
}

/* 欢迎区域 */
.hero-section {
  text-align: center;
  padding: 32rpx 0 40rpx;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  padding: 10rpx 24rpx;
  border-radius: 9999px;
  margin-bottom: 20rpx;
}

.badge-icon {
  font-size: 22rpx;
}

.badge-text {
  font-size: 24rpx;
  color: #92400e;
  font-weight: 600;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1f2937;
  display: block;
  margin-bottom: 12rpx;
  letter-spacing: 4rpx;
}

.hero-subtitle {
  font-size: 26rpx;
  color: #6b7280;
  display: block;
}

/* 通用区块样式 */
.section {
  margin-bottom: 36rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
}

/* 场景选择 */
.scene-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.scene-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.scene-card.active {
  background: linear-gradient(135deg, #ecfccb, #d9f99d);
  border-color: #84cc16;
  box-shadow: 0 6rpx 20rpx rgba(132, 204, 22, 0.25);
}

.scene-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.scene-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #374151;
}

.scene-card.active .scene-name {
  color: #3f6212;
}

/* 预算滑块 */
.budget-badge {
  background: linear-gradient(135deg, #84cc16, #65a30d);
  padding: 8rpx 20rpx;
  border-radius: 9999px;
}

.budget-value {
  font-size: 24rpx;
  font-weight: 700;
  color: white;
}

/* 双滑块组件 */
.range-slider-container {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 32rpx 24rpx 20rpx;
}

.range-slider {
  position: relative;
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.slider-track {
  position: absolute;
  left: 0;
  right: 0;
  height: 8rpx;
  background: #e5e7eb;
  border-radius: 4rpx;
}

.slider-range {
  position: absolute;
  height: 8rpx;
  background: linear-gradient(90deg, #84cc16, #65a30d);
  border-radius: 4rpx;
}

.slider-thumb {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  margin-left: -24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.thumb-inner {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(132, 204, 22, 0.4);
  border: 4rpx solid white;
}

.slider-thumb:active .thumb-inner {
  transform: scale(1.15);
  box-shadow: 0 6rpx 16rpx rgba(132, 204, 22, 0.5);
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
  padding: 0 4rpx;
}

.label-text {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 盲盒区域 */
.blindbox-section {
  padding: 24rpx 0;
}

.blindbox-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.blindbox {
  width: 240rpx;
  height: 240rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}

.blindbox.pressed {
  transform: scale(0.95);
}

.blindbox-glow {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(132, 204, 22, 0.25) 0%, transparent 70%);
  border-radius: 50%;
  animation: pulse-glow 2s ease-in-out infinite;
}

@keyframes pulse-glow {
  0%, 100% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.15); opacity: 0.8; }
}

.blindbox-inner {
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(135deg, #a3e635 0%, #84cc16 50%, #65a30d 100%);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 16rpx 40rpx rgba(132, 204, 22, 0.4),
    inset 0 -4rpx 12rpx rgba(0, 0, 0, 0.1),
    inset 0 4rpx 12rpx rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.blindbox-face {
  display: flex;
  align-items: center;
  justify-content: center;
}

.gift-icon {
  font-size: 80rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.blindbox-shadow {
  position: absolute;
  bottom: -12rpx;
  width: 140rpx;
  height: 20rpx;
  background: radial-gradient(ellipse, rgba(0, 0, 0, 0.12) 0%, transparent 70%);
  z-index: 1;
}

.blindbox-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* 摇晃动画 */
.blindbox.shake .blindbox-inner {
  animation: box-shake 0.8s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
}

@keyframes box-shake {
  0%, 100% { transform: translateX(0) rotate(0deg); }
  10% { transform: translateX(-10rpx) rotate(-4deg); }
  20% { transform: translateX(10rpx) rotate(4deg); }
  30% { transform: translateX(-10rpx) rotate(-4deg); }
  40% { transform: translateX(10rpx) rotate(4deg); }
  50% { transform: translateX(-6rpx) rotate(-2deg); }
  60% { transform: translateX(6rpx) rotate(2deg); }
  70% { transform: translateX(-4rpx) rotate(-1deg); }
  80% { transform: translateX(4rpx) rotate(1deg); }
}

/* 底部占位 */
.bottom-placeholder {
  height: 160rpx;
}

/* 底部固定按钮 */
.bottom-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(transparent, rgba(240, 253, 244, 0.95) 30%);
  z-index: 100;
}

.btn-draw {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #a3e635 0%, #84cc16 50%, #65a30d 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 10rpx 28rpx rgba(132, 204, 22, 0.4);
  border: none;
  transition: all 0.3s ease;
}

.btn-draw::after {
  border: none;
}

.btn-draw:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 16rpx rgba(132, 204, 22, 0.3);
}

.btn-draw.disabled {
  opacity: 0.7;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 700;
  color: white;
  letter-spacing: 2rpx;
}
