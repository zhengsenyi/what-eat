/* pages/index/index.wxss */
.container-index {
  height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #ecfccb 50%, #fefce8 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 禁止滚动状态 */
.container-index.no-scroll {
  overflow: hidden;
  position: fixed;
  width: 100%;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  background: transparent;
  padding: 0 24rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.app-logo {
  font-size: 40rpx;
}

.app-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
  letter-spacing: 2rpx;
}

/* 右侧区域 */
.nav-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

/* 我的页面入口 */
.profile-entry {
  margin-right: 16rpx;
}

.profile-btn {
  padding: 0 24rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.profile-icon {
  font-size: 32rpx;
}

.nav-right-placeholder {
  flex-shrink: 0;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

/* 盲盒区域 - 占满剩余空间 */
.blindbox-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
}

.blindbox-container {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.blindbox-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 盲盒样式 */
.blindbox {
  width: 320rpx;
  height: 320rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}

.blindbox.pressed {
  transform: scale(0.95);
}

/* 光晕效果 */
.blindbox-glow {
  position: absolute;
  width: 280rpx;
  height: 280rpx;
  background: radial-gradient(circle, rgba(132, 204, 22, 0.3) 0%, transparent 70%);
  border-radius: 50%;
  animation: pulse-glow 2s ease-in-out infinite;
}

.blindbox-glow.glow-active {
  animation: pulse-glow-active 0.5s ease-in-out infinite;
  background: radial-gradient(circle, rgba(132, 204, 22, 0.5) 0%, rgba(250, 204, 21, 0.3) 50%, transparent 70%);
}

@keyframes pulse-glow {
  0%, 100% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.15); opacity: 0.8; }
}

@keyframes pulse-glow-active {
  0%, 100% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.3); opacity: 1; }
}

/* 粒子效果 */
.particles {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.particle {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
}

.particle-1 {
  top: 20%;
  left: 10%;
  animation: particle-float 0.8s ease-in-out infinite;
}

.particle-2 {
  top: 10%;
  right: 20%;
  animation: particle-float 0.8s ease-in-out infinite 0.1s;
}

.particle-3 {
  bottom: 30%;
  left: 5%;
  animation: particle-float 0.8s ease-in-out infinite 0.2s;
}

.particle-4 {
  bottom: 20%;
  right: 10%;
  animation: particle-float 0.8s ease-in-out infinite 0.3s;
}

.particle-5 {
  top: 40%;
  left: 0%;
  animation: particle-float 0.8s ease-in-out infinite 0.4s;
}

.particle-6 {
  top: 50%;
  right: 0%;
  animation: particle-float 0.8s ease-in-out infinite 0.5s;
}

@keyframes particle-float {
  0%, 100% { 
    transform: translateY(0) scale(1); 
    opacity: 1;
  }
  50% { 
    transform: translateY(-20rpx) scale(1.2); 
    opacity: 0.6;
  }
}

/* 盲盒主体 */
.blindbox-inner {
  width: 240rpx;
  height: 240rpx;
  position: relative;
  z-index: 2;
}

.blindbox-body {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #a3e635 0%, #84cc16 50%, #65a30d 100%);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 20rpx 50rpx rgba(132, 204, 22, 0.4),
    inset 0 -6rpx 16rpx rgba(0, 0, 0, 0.1),
    inset 0 6rpx 16rpx rgba(255, 255, 255, 0.3);
}

.blindbox-lid {
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 180rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #84cc16 0%, #65a30d 100%);
  border-radius: 16rpx 16rpx 0 0;
  z-index: 3;
  transition: transform 0.5s ease;
}

.blindbox-lid.lid-open {
  transform: translateX(-50%) translateY(-40rpx) rotate(-30deg);
}

.lid-ribbon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  border-radius: 50%;
}

.blindbox-face {
  display: flex;
  align-items: center;
  justify-content: center;
}

.gift-icon {
  font-size: 100rpx;
  filter: drop-shadow(0 6rpx 12rpx rgba(0, 0, 0, 0.2));
}

.blindbox-shadow {
  position: absolute;
  bottom: -20rpx;
  width: 180rpx;
  height: 30rpx;
  background: radial-gradient(ellipse, rgba(0, 0, 0, 0.15) 0%, transparent 70%);
  z-index: 1;
  transition: all 0.3s ease;
}

.blindbox-shadow.shadow-active {
  width: 200rpx;
  opacity: 0.8;
}

.blindbox-hint {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 剩余次数 */
.remaining-times {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
}

.times-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.times-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #84cc16;
}

.times-unit {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 摇晃动画 - 增强版 */
.blindbox.shake .blindbox-inner {
  animation: box-shake-enhanced 0.6s cubic-bezier(0.36, 0.07, 0.19, 0.97) infinite;
}

@keyframes box-shake-enhanced {
  0%, 100% { transform: translateX(0) rotate(0deg) scale(1); }
  10% { transform: translateX(-15rpx) rotate(-8deg) scale(1.02); }
  20% { transform: translateX(15rpx) rotate(8deg) scale(1.02); }
  30% { transform: translateX(-15rpx) rotate(-8deg) scale(1.02); }
  40% { transform: translateX(15rpx) rotate(8deg) scale(1.02); }
  50% { transform: translateX(-10rpx) rotate(-5deg) scale(1.01); }
  60% { transform: translateX(10rpx) rotate(5deg) scale(1.01); }
  70% { transform: translateX(-8rpx) rotate(-3deg) scale(1); }
  80% { transform: translateX(8rpx) rotate(3deg) scale(1); }
  90% { transform: translateX(-4rpx) rotate(-1deg) scale(1); }
}

/* 开盒动画 */
.blindbox.opening .blindbox-inner {
  animation: box-open 0.8s ease-out forwards;
}

@keyframes box-open {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(0); opacity: 0; }
}

/* ========== 抽奖结果展示 ========== */
.result-wrapper {
  width: 100%;
  padding: 0 20rpx;
}

.result-card {
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  transform: scale(0.8);
  opacity: 0;
  transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.result-card.result-enter {
  transform: scale(1);
  opacity: 1;
}

/* 食物图片 */
.food-image-container {
  position: relative;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.food-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.food-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.badge-text {
  font-size: 24rpx;
  color: white;
  font-weight: 600;
}

/* 食物信息 */
.food-info {
  padding: 28rpx 32rpx;
}

.food-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
}

.food-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.food-price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  color: #ef4444;
  font-weight: 600;
}

.price-value {
  font-size: 44rpx;
  color: #ef4444;
  font-weight: 700;
}

.food-category {
  background: #f3f4f6;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.category-text {
  font-size: 24rpx;
  color: #6b7280;
}

.food-description {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 结果操作按钮 */
.result-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 32rpx 32rpx;
}

.btn-retry, .btn-accept {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-retry {
  background: #f3f4f6;
  color: #374151;
}

.btn-accept {
  background: linear-gradient(135deg, #84cc16, #65a30d);
  color: white;
}

.btn-retry::after, .btn-accept::after {
  border: none;
}

.btn-icon {
  font-size: 32rpx;
}

/* ========== 底部设置区域 ========== */
.bottom-settings {
  flex-shrink: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx 40rpx 0 0;
  padding: 28rpx 32rpx;
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.05);
}

.setting-section {
  margin-bottom: 24rpx;
}

.setting-section:last-of-type {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
}

/* 场景选择 */
.scene-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.scene-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 12rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.scene-card.active {
  background: linear-gradient(135deg, #ecfccb, #d9f99d);
  border-color: #84cc16;
  box-shadow: 0 6rpx 20rpx rgba(132, 204, 22, 0.25);
}

.scene-icon {
  font-size: 36rpx;
  margin-bottom: 6rpx;
}

.scene-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #374151;
}

.scene-card.active .scene-name {
  color: #3f6212;
}

/* 预算滑块 */
.budget-badge {
  background: linear-gradient(135deg, #84cc16, #65a30d);
  padding: 8rpx 20rpx;
  border-radius: 9999px;
}

.budget-value {
  font-size: 24rpx;
  font-weight: 700;
  color: white;
}

/* 双滑块组件 */
.range-slider-container {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 24rpx 20rpx 16rpx;
}

.range-slider {
  position: relative;
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
}

.slider-track {
  position: absolute;
  left: 0;
  right: 0;
  height: 8rpx;
  background: #e5e7eb;
  border-radius: 4rpx;
}

.slider-range {
  position: absolute;
  height: 8rpx;
  background: linear-gradient(90deg, #84cc16, #65a30d);
  border-radius: 4rpx;
}

.slider-thumb {
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  margin-left: -22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.thumb-inner {
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #84cc16, #65a30d);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(132, 204, 22, 0.4);
  border: 4rpx solid white;
}

.slider-thumb:active .thumb-inner {
  transform: scale(1.15);
  box-shadow: 0 6rpx 16rpx rgba(132, 204, 22, 0.5);
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  padding: 0 4rpx;
}

.label-text {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 抽选按钮容器 */
.draw-button-container {
  margin-top: 20rpx;
}

.btn-draw {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #a3e635 0%, #84cc16 50%, #65a30d 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 10rpx 28rpx rgba(132, 204, 22, 0.4);
  border: none;
  transition: all 0.3s ease;
}

.btn-draw::after {
  border: none;
}

.btn-draw:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 16rpx rgba(132, 204, 22, 0.3);
}

.btn-draw.disabled {
  opacity: 0.7;
}

.btn-draw .btn-icon {
  font-size: 32rpx;
}

.btn-draw .btn-text {
  font-size: 30rpx;
  font-weight: 700;
  color: white;
  letter-spacing: 2rpx;
}
